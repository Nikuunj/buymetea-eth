generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int            @id          @default(autoincrement())
  email             String        
  address           String         
  password          String
  userProfile       UserProfile?
  transactions      Transaction[]
  messages          Messages[]
  deposits          Deposit[]
}

model UserProfile {
  userId            Int            @id
  name              String
  about             String
  links             String[]  
  user              User           @relation(fields: [userId], references: [id])
}

model  Messages {
  id                String         @id           @default(uuid())
  userId            Int
  name              String
  say               String
  transactionId     String          @unique
  tx                Transaction                  @relation(fields: [transactionId], references: [id])
  user              User                         @relation(fields: [userId], references: [id])
}

model  Transaction {
  id                String         @id           @default(uuid())
  from              String
  to                Int
  amount            Int 
  tokenName         String
  txHash            String 
  dateTime          DateTime                     @default(now())
  user              User                         @relation(fields: [to], references: [id])
  messages          Messages?
  deposit           Deposit?
}   

model Deposit {
  transactionId     String           @id   
  userId            Int  
  user              User                        @relation(fields: [userId], references: [id])
  trasaction        Transaction                 @relation(fields: [transactionId], references: [id])
}